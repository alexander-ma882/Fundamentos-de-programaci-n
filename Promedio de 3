#include <iostream>

using namespace std;

int main()
{
    int numero1, numero2, numero3;
    float promedio;
    cout<<"Ingresar el primer numero";
    cin>>numero1;
    if ((numero1>=0)&&(numero1<=10))
    {
        cout<<"Ingresar el segundo numero";
        cin>>numero2;
        if ((numero2>=0)&&(numero2<=10))
       
        {
            cout<<"Ingresar el tercer numero";
            cin>>numero3;
            if ((numero3>=0)&&(numero3<=10))
            
            {
                promedio=(numero1+numero2+numero3)/3.00;
                cout<<"El promedio es:"<<promedio;
            }
            else
                cout<<"Error";  
       }
       else
           cout<<"Error";
    }
    else
        cout<<"Error";
}   
